@page "/methods/showhide"

@using Syncfusion.Blazor.Lists

<div id="container">
    <button id="hide" @onclick="@HideItem">Hide Item</button>
    <button id="show" @onclick="@ShowItem">Show Item</button>
    <div class="flex vertical-center">
        <div class="padding">
            <SfListView ID="Listview" @ref="listInstance" DataSource="@DataSource" Width="300px">
                <ListViewFieldSettings TValue="ListDataModel" Id="Id" Text="Text"></ListViewFieldSettings>
                <ListViewEvents TValue="ListDataModel">
                </ListViewEvents>
            </SfListView>
        </div>
    </div>
</div>

@code
{ SfListView<ListDataModel> listInstance;
    List<string> Events = new List<string>();

    List<ListDataModel> DataSource = new List<ListDataModel>() {
    new ListDataModel { Id = "1", Text = "Text 1" },
    new ListDataModel { Id = "2", Text = "Text 2" },
    new ListDataModel { Id = "3", Text = "Text 3" },
    new ListDataModel { Id = "4", Text = "Text 4" },
    new ListDataModel { Id = "5", Text = "Text 5" },
    new ListDataModel { Id = "6", Text = "Text 6" },
    new ListDataModel { Id = "7", Text = "Text 7" },
};

    class ListDataModel
    {
        public string Id
        {
            get;
            set;
        }
        public string Text
        {
            get;
            set;
        }
    }

    private void HideItem(MouseEventArgs e)
    {
        this.listInstance.HideItem(new ListDataModel { Id = "1", Text = "Text 1" });
    }

    private void ShowItem(MouseEventArgs e)
    {
        this.listInstance.ShowItem(new ListDataModel { Id = "1", Text = "Text 1" });
    }

}
