@using Syncfusion.Blazor.Navigations;


<div class="i-height100Percent">
    <div class="i-mainSidebarMobileMenuClose">
        <i class="fas fa-times"></i>
    </div>
    <SfMenu CssClass="i-mainSidebarMobileMenu"
            Items="@MainMobileMenuItems"
            HamburgerMode="true"
            ShowItemOnClick="true"
            Orientation="Syncfusion.Blazor.Navigations.Orientation.Vertical">
        <MenuEvents TValue="MenuMobileItemDto" OnOpen="@beforeOpenHandler"></MenuEvents>
    </SfMenu>
</div>

@*EnableScrolling="true"*@

<style>
    .i-mainSidebarMobileMenuClose {
        color: var(--colorMainSidebar);
        font-size: var(--fontSizeMedium);
        text-align: right;
        padding-right: 12px;
        padding-top: 12px;
    }

    .i-mainSidebarMobileMenu {
        background-color: var(--backgroundColorMainSidebar);
    }

        .i-mainSidebarMobileMenu .e-ul .e-menu-item.e-separator {
            border-bottom-color: var(--colorMainSidebar);
        }

    .e-menu-container.e-custom-scroll {
        width: 492px;
    }
</style>
