<style>
    .i-mainContentMobile {
        margin-left: -1px;
    }

        .i-mainContentMobile .e-sidebar {
            background-color: var(--backgroundColorMainSidebar);
        }

            .i-mainContentMobile .e-sidebar.e-left {
                border-right: 0px;
            }

    .i-mainSidebarMobileMenu.e-menu-container ul .e-menu-item.e-selected,
