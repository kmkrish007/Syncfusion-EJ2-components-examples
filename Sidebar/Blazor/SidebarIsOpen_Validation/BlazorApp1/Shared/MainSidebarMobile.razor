    .i-mainSidebarMobileMenu.e-menu-container ul .e-menu-item.e-focused .e-menu-url,
    .i-mainSidebarMobileMenu.e-menu-container ul .e-menu-item.e-focused .e-menu-icon::before,
    .i-mainSidebarMobileMenu.e-menu-container ul .e-menu-item.e-selected .e-menu-icon::before {
        color: var(--colorMainSidebarHover);
    }

    .i-mainSidebarMobileMenu.e-menu-container.e-menu-popup {
        background-color: var(--backgroundColorMainSidebar);
    }

    .i-mainSidebarMobileMenu.e-menu-,
    .i-mainSidebarMobileMenu.e-menu-container ul {
        background-color: var(--backgroundColorMainSidebar);
        overflow: hidden;
    }

        .i-mainSidebarMobileMenu.e-menu-container ul .e-menu-item .e-menu-url {
            color: var(--colorMainSidebar);
        }

