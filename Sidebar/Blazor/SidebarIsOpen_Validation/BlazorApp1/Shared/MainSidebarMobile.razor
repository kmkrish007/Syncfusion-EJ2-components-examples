        .i-mainSidebarMobileMenu.e-menu-container ul .e-menu-item:hover,
        .i-mainSidebarMobileMenu.e-menu-container ul .e-menu-item.e-focused:hover,
        .i-mainSidebarMobileMenu.e-menu-container ul .e-menu-item.e-focused,
        .i-mainSidebarMobileMenu.e-menu-container .e-ul .e-menu-item.e-focused,
        .i-mainSidebarMobileMenu.e-menu-container ul .e-menu-item.e-selected {
            background-color: var(--backgroundColorMainSidebarHover);
